.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path , class: "top-items__icons__edit" do
          %i.fas.fa-edit
        = link_to edit_user_path(current_user) , class: "top-items__icons__setting" do
          %i.fas.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to '#' do
          .side-bar__group-list__group__group-name
            = group.name
          .side-bar__group-list__group__latest-message
            -# = group.text
